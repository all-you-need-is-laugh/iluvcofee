{
  "name": "iluvcofee",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "\n### DB RELATED SCRIPTS": "",

    "db:start": "docker-compose up -d postgres",
    "db:start-test": "docker-compose up -d test-postgres",
    "db:stop": "docker-compose stop postgres && docker-compose rm -f postgres",
    "db:stop-test": "docker-compose stop test-postgres && docker-compose rm -f test-postgres",


    "\n### TEST RELATED SCRIPTS": "",

    "pretest": "yarn test:clear-cache; yarn db:start-test",
    "test": "jest",
    "posttest": "yarn db:stop-test",

    "pretest:debug": "yarn test:clear-cache; yarn db:start-test",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --config ./test/configs/jest-debug.js --runInBand",
    "posttest:debug": "yarn db:stop-test",

    "test:clear-cache": "jest --clearCache",

    "test:all": "yarn test --config ./test/configs/jest-all.js",
    "test:cov": "yarn test --coverage --config ./test/configs/jest-all.js",
    "test:e2e": "yarn test --config ./test/configs/jest-e2e.js",
    "test:unit": "yarn test --config ./test/configs/jest-unit.js",


    "\n### DEVELOPMENT RELATED SCRIPTS": "",

    "prestart": "yarn db:start",
    "start": "nest start",
    "poststart": "yarn db:stop",

    "start:dev": "yarn start --watch",
    "start:debug": "yarn start --debug --watch",


    "\n### PRODUCTION RELATED SCRIPTS": "",

    "prebuild": "rimraf dist",
    "build": "nest build",

    "start:prod": "node dist/main",


    "\n### UTILITY SCRIPTS": "",

    "format": "yarn lint --fix",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mapped-types": "^1.0.1",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/typeorm": "^8.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "pg": "^8.7.3",
    "pg-protocol": "^1.5.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-spellcheck": "^0.0.19",
    "jest": "^27.2.5",
    "jest-extended": "^2.0.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  }
}
